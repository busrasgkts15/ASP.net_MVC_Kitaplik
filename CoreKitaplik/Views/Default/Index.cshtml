@using CoreKitaplik.Controllers;

@{
    ViewData["Title"] = "Index";
}

@model List<Book>;
<h1>Ürünler</h1>


<a asp-controller="default" asp-action="Add">Ürün Ekle</a>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Author</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.bookName</td>
                <td>@item.author</td>
                
                <td><a asp-controller="default" asp-action="Remove" asp-route-id="@item.Id">Sil</a></td>
                <td><a asp-controller="default" asp-action="Update" asp-route-id="@item.Id">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>

